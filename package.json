{
  "name": "sports-app",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=22.2"
  },
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "start:debug": "nest start --watch --debug",
    "migrate": "pnpx typeorm migration:run -d dist/config",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --detectOpenHandles"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.15",
    "@nestjs/core": "^10.4.15",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^11.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@garmin/fitsdk": "^21.141.0",
    "@logtail/pino": "^0.4.22",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/bull": "10.2.3",
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/cli": "^10.4.9",
    "@nestjs/config": "3.3.0",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/serve-static": "^4.0.2",
    "@nestjs/swagger": "^8.1.0",
    "@nestjs/testing": "^10.4.15",
    "@nestjs/throttler": "^6.3.0",
    "@nestjs/typeorm": "10.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.14",
    "@types/luxon": "3.4.2",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.5",
    "@types/nodemailer": "^6.4.17",
    "@types/passport-github": "^1.1.12",
    "@types/passport-google-oauth2": "^0.1.10",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/staticmaps": "^1.12.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "axios": "1.7.9",
    "bcryptjs": "^2.4.3",
    "bull": "4.16.5",
    "cache-manager": "^5.6.1",
    "cache-manager-redis-yet": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "eslint": "^9.17.0",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "lodash": "^4.17.21",
    "luxon": "^3.5.0",
    "nestjs-pino": "^4.2.0",
    "nodemailer": "^6.9.16",
    "passport": "^0.7.0",
    "passport-github": "^1.1.0",
    "passport-google-oauth2": "^0.2.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "pino-http": "^10.1.0",
    "pino-pretty": "13.0.0",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "source-map-support": "^0.5.21",
    "staticmaps": "^1.13.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.20",
    "typescript": "5.7.2",
    "typescript-eslint": "^8.19.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
