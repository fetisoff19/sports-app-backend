{
  "name": "sports-app",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=21"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start -e 'node --experimental-require-module'",
    "start:dev": "nest start --watch -e 'node --experimental-require-module'",
    "start:prod": "node --experimental-require-module dist/main",
    "start:debug": "nest start --watch --debug  -e 'node --experimental-require-module'",
    "migrate:dev": "pnpm run build && pnpx typeorm migration:run -d ./dist/config.js",
    "migrate:prod": "pnpm run build && pnpx typeorm migration:run -d ./dist/config.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.8",
    "@nestjs/core": "^10.3.8"
  },
  "devDependencies": {
    "@garmin/fitsdk": "^21.141.0",
    "@logtail/pino": "^0.4.21",
    "@nestjs/bull": "10.1.1",
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/config": "3.2.2",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/platform-express": "^10.3.8",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/serve-static": "^4.0.2",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/testing": "^10.3.8",
    "@nestjs/throttler": "^5.1.2",
    "@nestjs/typeorm": "10.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.17.4",
    "@types/luxon": "3.4.2",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.12.12",
    "@types/staticmaps": "^1.12.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^6.21.0",
    "axios": "^1.6.8",
    "bcryptjs": "^2.4.3",
    "bull": "4.12.5",
    "cache-manager": "^5.5.2",
    "cache-manager-redis-yet": "^5.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "lodash": "^4.17.21",
    "luxon": "^3.4.4",
    "nestjs-pino": "^4.1.0",
    "pg": "^8.11.5",
    "pino": "^9.1.0",
    "pino-http": "^10.1.0",
    "pino-pretty": "11.0.0",
    "prettier": "^3.2.5",
    "redis": "^4.6.14",
    "reflect-metadata": "^0.2.2",
    "source-map-support": "^0.5.21",
    "staticmaps": "^1.13.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.20",
    "typescript": "^5.4.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
